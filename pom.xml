<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.codahale</groupId>
    <artifactId>common-pom</artifactId>
    <version>0.0.19</version>
  </parent>

  <artifactId>xsalsa20poly1305</artifactId>
  <version>0.11.1-SNAPSHOT</version>
  <name>xsalsa20poly1305</name>
  <url>https://github.com/codahale/xsalsa20poly1305</url>
  <description>
    An implementation of XSalsa20Poly1305 authenticated encryption.
  </description>

  <inceptionYear>2017</inceptionYear>
  <scm>
    <connection>scm:git:https://github.com/codahale/xsalsa20poly1305.git</connection>
    <developerConnection>scm:git:https://github.com/codahale/xsalsa20poly1305.git
    </developerConnection>
    <url>https://github.com/codahale/xsalsa20poly1305</url>
    <tag>HEAD</tag>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.bouncycastle</groupId>
      <artifactId>bcprov-jdk18on</artifactId>
      <version>1.72</version>
    </dependency>
    <!-- compatible libraries for interoperability tests -->
    <dependency>
      <groupId>com.github.nitram509</groupId>
      <artifactId>jmacaroons</artifactId>
      <version>0.4.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.abstractj.kalium</groupId>
      <artifactId>kalium</artifactId>
      <version>0.8.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>null</source>
            <target>null</target>
            <release>8</release>
          </configuration>
          <executions>
            <execution>
              <id>compile-java-9</id>
              <phase>compile</phase>
              <goals>
                <goal>compile</goal>
              </goals>
              <configuration>
                <release>9</release>
                <compileSourceRoots>${project.basedir}/src/main/java9</compileSourceRoots>
                <multiReleaseOutput>true</multiReleaseOutput>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <configuration>
            <archive>
              <manifestEntries>
                <Multi-Release>true</Multi-Release>
              </manifestEntries>
            </archive>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
